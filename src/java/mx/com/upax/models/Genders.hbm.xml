<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="mx.com.upax.models.Genders" table="genders" schema="public" optimistic-lock="version">
        <id name="id" type="integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="name" type="string">
            <column name="name" not-null="true" />
        </property>
        <property name="createdAt" type="timestamp">
            <column name="created_at" length="29" />
        </property>
        <property name="updatedAt" type="timestamp">
            <column name="updated_at" length="29" />
        </property>
        <set name="employeeses" table="employees" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="gender_id" not-null="true" />
            </key>
            <one-to-many class="mx.com.upax.models.Employees" />
        </set>
    </class>
</hibernate-mapping>
